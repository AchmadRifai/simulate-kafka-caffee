spring.redis.timeout=60000

# kafka config
achmad.rifai.kafka.bootstrap-servers=${KAFKA_HOST}
achmad.rifai.kafka.consumer.group-id=${KAFKA_GROUP}
achmad.rifai.kafka.consumer.auto-offset-reset=${KAFKA_OFFSET}

my.kafka.topic=my-topic